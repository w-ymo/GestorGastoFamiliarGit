<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:columnCount="2"
    android:rowCount="6"
    tools:context=".fragments.FragmentRegistro">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_category" />

    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/sp_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="2"
        android:minHeight="48dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_concepto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_concepto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_concept" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/hint_date"
            android:inputType="date"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_price"
            android:inputType="numberDecimal"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnWeight="8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username" />

    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/sp_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_columnWeight="2"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/b_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_register"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="2"/>

</GridLayout>